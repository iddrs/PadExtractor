<Window x:Name="MainWindow1" x:Class="PadExtractorDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PadExtractorDesktop" d:DataContext="{d:DesignInstance Type=local:ProgressMonitor}"
        mc:Ignorable="d"
        Title="PadExtractor" Height="450" Width="800" Icon="/padextractor.ico" ResizeMode="CanMinimize" WindowStartupLocation="CenterOwner">
    <Grid x:Name="MainLayout">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ProgressBar x:Name="Progressbar" HorizontalAlignment="Left" Height="31" Margin="75,270,0,0" VerticalAlignment="Top" Width="549" Grid.ColumnSpan="2" Value="{Binding ProgressValue}"/>
        <TextBox x:Name="ExecutivoSourceDirectoryEntry" HorizontalAlignment="Left" Margin="74,63,0,0" TextWrapping="Wrap" Text="Selecione o diretório dos *.txt do Executivo" VerticalAlignment="Top" Width="550" Height="31" IsReadOnly="True" Grid.ColumnSpan="2"/>
        <Label Content="*.txt do Executivo" HorizontalAlignment="Left" Height="32" Margin="74,26,0,0" VerticalAlignment="Top" Width="158" FontSize="16" Grid.ColumnSpan="2"/>
        <Button x:Name="ExecutivoSourceDirectoryButton" Content="Procurar" HorizontalAlignment="Left" Height="31" Margin="629,63,0,0" VerticalAlignment="Top" Width="97" Click="OpenExecutivoDirectoryDialog" Grid.Column="1"/>
        <TextBox x:Name="LegislativoSourceDirectoryEntry" HorizontalAlignment="Left" Margin="74,146,0,0" TextWrapping="Wrap" Text="Selecione o diretório dos *.txt do Legislativo" VerticalAlignment="Top" Width="550" Height="31" IsReadOnly="True" Grid.ColumnSpan="2"/>
        <Label Content="*.txt do Legislativo" HorizontalAlignment="Left" Height="32" Margin="74,109,0,0" VerticalAlignment="Top" Width="158" FontSize="16" Grid.ColumnSpan="2"/>
        <Button x:Name="LegislativoSourceDirectoryButton" Content="Procurar" HorizontalAlignment="Left" Height="31" Margin="629,146,0,0" VerticalAlignment="Top" Width="97" Click="OpenLegislativoDirectoryDialog" Grid.Column="1"/>
        <Button x:Name="StartButton" Content="Processar" HorizontalAlignment="Left" Height="31" Margin="629,270,0,0" VerticalAlignment="Top" Width="97" Click="StartProcess" Grid.Column="1"/>
        <StatusBar Grid.ColumnSpan="2" Height="25" VerticalAlignment="Bottom">
            <StatusBarItem Margin="0,-11,0,0">
                <TextBlock Text="{Binding ProgressMessage}"></TextBlock>
            </StatusBarItem>
        </StatusBar>
        <Button x:Name="btnOpenConfig" Content="Configurações" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="39" Margin="75,334,0,0" VerticalAlignment="Top" Width="91" Click="btnOpenConfig_Click"/>

    </Grid>
</Window>
