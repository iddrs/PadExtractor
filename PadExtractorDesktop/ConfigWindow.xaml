<Window x:Class="PadExtractorDesktop.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PadExtractorDesktop"
        mc:Ignorable="d"
        Title="Pad Extractor Configuration" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="entryLayoutDirConfig" HorizontalAlignment="Left" Height="30" Margin="31,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="650"/>
        <Label Content="Diretório dos arquivos de layout" HorizontalAlignment="Left" Height="35" Margin="26,40,0,0" VerticalAlignment="Top" Width="187"/>
        <Button x:Name="btnSelectLayoutDirConfig" Content="Escolher" HorizontalAlignment="Left" Height="30" Margin="686,67,0,0" VerticalAlignment="Top" Width="83" Click="btnSelectLayoutDirConfig_Click"/>
        <Label Content="Configurações de conexão com o DB" HorizontalAlignment="Left" Height="35" Margin="27,108,0,0" VerticalAlignment="Top" Width="212"/>
        <Label Content="Host" HorizontalAlignment="Left" Height="35" Margin="26,138,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="entryHostConfig" HorizontalAlignment="Left" Height="30" Margin="115,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="654"/>
        <Label Content="Usuário" HorizontalAlignment="Left" Height="35" Margin="26,183,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="entryDbUserConfig" HorizontalAlignment="Left" Height="30" Margin="115,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="654"/>
        <Label Content="Senha" HorizontalAlignment="Left" Height="35" Margin="26,241,0,0" VerticalAlignment="Top" Width="84"/>
        <PasswordBox x:Name="entryDbPasswordConfig" HorizontalAlignment="Left" Height="30" Margin="115,243,0,0" VerticalAlignment="Top" Width="654"/>
        <Button x:Name="btnSaveConfig" Content="Salvar" HorizontalAlignment="Left" Height="43" Margin="661,343,0,0" VerticalAlignment="Top" Width="97" Click="btnSaveConfig_Click"/>
        <Label Content="Db name" HorizontalAlignment="Left" Height="35" Margin="26,293,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="entryDbNameconfig" HorizontalAlignment="Left" Height="30" Margin="115,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="654"/>

    </Grid>
</Window>
